package(default_visibility = ["//visibility:public"])

cc_library(
    name = "gtest",
    srcs = glob(
        include = [
            "src/*.cc",
            "src/*.h",
            "include/gtest/**/*.h",
        ],
        exclude = [
            "src/gtest-all.cc",
            "src/gtest_main.cc",
        ],
    ),
    hdrs = glob([
        "include/gtest/*.h",
        "include/gmock/*.h",
    ]),
    copts = ["-pthread"],
    includes = [
        "include",
    ],
)

cc_library(
    name = "gtest_main",
    srcs = ["src/gmock_main.cc"],
    deps = [":gtest"],
)
